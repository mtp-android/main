<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_weight="0.31">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/statistics"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentStart="true"
            android:padding="2dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Aktualna forma na dzień:"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/statDate"
            android:layout_below="@+id/textView2"
            android:layout_toEndOf="@+id/imageView"
            android:layout_alignParentBottom="true"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Grupy pomiarów"
        android:id="@+id/textView16"
        android:layout_weight="0.05"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tapnij nazwę grupy aby wyświetlić szczegóły"
        android:id="@+id/textView17"
        android:layout_weight="0.05"
        android:layout_marginLeft="15dp"
        android:textColor="#d32f2f" />

    <ExpandableListView
        android:layout_width="match_parent"
        android:id="@+id/measureExpList"
        android:layout_height="326dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.64" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aktualizacja pomiarów"
        android:id="@+id/updateMeasuresBtn"
        android:layout_weight="0.07" />

</LinearLayout>